@{
    ViewData["Title"] = "List travaux";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="print">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Home renovation /</span> Liste travaux</h4>
                    <div class="row mb-5">
            <div class="col-md-6"> </div>
            <div class="col-md-6">
                <form action="@Url.Action("Index", "Admin")" method="get">
                    <button type="submit"  class="btn btn-dark" style="float:right;">Return to List</button>
                </form>
            </div>
        </div>
            <div class="row mb-5">
                <div class="col-11">
                    <div class="card">
                        <p class="card-header"></p>
                        <div class="table-responsive text-nowrap">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th style="width: 20%">Num</th>
                                <th style="width: 20%">Designation</th>
                                <th style="width: 20%">Unite</th>
                                <th style="width: 20%">Prix unitaire</th>
                                <th style="width: 20%">Modif</th>
                            </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach(var d in Model.tacheList)
                                {
                                    <tr>
                                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@d.num</strong></td>
                                        <td>@d.designation</td>
                                        <td>@d.unite</td>
                                        <td style="text-align: right;">@(string.Format("{0:#,##0.00}", d.puDouble)) Ar</td>
                                        <form action="@Url.Action("pageModif", "Admin")" method="post">
                                            <input type="hidden" value="@d.idTache" name="idTache"/>
                                            <td><button type="submit" class="btn btn-warning">Modif</button></td> 
                                        </form>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
