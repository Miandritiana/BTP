@{
    ViewData["Title"] = "Import csv";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Home renovation /</span> Import csv</h4>
                <div class="row mb-5">
            <div class="col-md-6"> </div>
            <div class="col-md-6">
                <form action="@Url.Action("Index", "Admin")" method="get">
                    <button type="submit"  class="btn btn-dark" style="float:right;">Return to List</button>
                </form>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-4">

                <form method="post" enctype="multipart/form-data" action="@Url.Action("ImportMaisonTrav", "Admin")">
                    <input type="file" name="csvFile" class="form-control" />
                    <div class="demo-vertical-spacing">
                        <button type="submit" class="btn btn-primary">
                            Maison et Travaux
                        </button>
                    </div>
                </form>

            </div>

            <div class="col-md-4">

                <form method="post" enctype="multipart/form-data" action="@Url.Action("ImportDevis", "Admin")">
                    <input type="file" name="csvFile" class="form-control" />
                    <div class="demo-vertical-spacing">
                        <button type="submit" class="btn btn-primary">
                            Devis
                        </button>
                    </div>
                </form>

            </div>


            <div class="col-md-4">

                <form method="post" enctype="multipart/form-data" action="@Url.Action("ImportPaiement", "Admin")">
                    <input type="file" name="csvFile" class="form-control" />
                    <div class="demo-vertical-spacing">
                        <button type="submit" class="btn btn-primary">
                            Paiement
                        </button>
                    </div>
                </form>

            </div>

        </div>

        <div class="row mb-5">
            
            <div class="col-md-12">
                <h2></h2>
                @if(ViewBag.Message != null)
                {
                    <div class="alert alert-success" role="alert">@ViewBag.Message</div>
                }
                @if(ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }
            </div>
        </div>

    </div>
</div>